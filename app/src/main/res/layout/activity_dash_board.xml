<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DashBoardActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="#f4f4f4"
        android:orientation="vertical"
        tools:context=".DashBoardActivity">

        <Button
            android:id="@+id/novaMateriaButton"
            android:text="@string/novaMateriaButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/button_custom"
            android:layout_marginBottom="8dp"
            android:onClick="selecionarFuncao" />

        <Button
            android:id="@+id/materiasButton"
            android:text="@string/materiaButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/button_custom"
            android:layout_marginBottom="8dp"
            android:onClick="selecionarFuncao" />

        <Button
            android:id="@+id/calculaNotaButton"
            android:text="@string/calculaNotaButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/button_custom"
            android:layout_marginBottom="8dp"
            android:onClick="selecionarFuncao" />

        <Button
            android:id="@+id/anotacoesButton"
            android:text="@string/anotacoesButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/button_custom"/>

    </LinearLayout>
</LinearLayout>